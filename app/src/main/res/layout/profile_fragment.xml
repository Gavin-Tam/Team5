<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="25dp"
        android:text="Profile"
        android:textColor="@color/white"
        android:textSize="25sp"></TextView>

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username:"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="45dp"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textViewUsername"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="25dp"
        android:hint="Enter username"
        android:inputType="text"
        android:background="@drawable/edittextdrawable"
        />

    <TextView
        android:id="@+id/textEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewUsername"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="2dp"
        android:text="Email:"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/edittextEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textEmailAddress"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/editTextUsername"
        android:hint="Enter email"
        android:inputType="textEmailAddress"
        android:background="@drawable/edittextdrawable"
        />

    <!-- Age -->
    <TextView
        android:id="@+id/textViewAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textEmailAddress"
        android:layout_marginStart="25dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:text="Age:"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/editTextAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textViewAge"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/edittextEmailAddress"
        android:hint="Enter age"
        android:inputType="number"
        android:background="@drawable/edittextdrawable"
        />

    <!-- Height -->
    <TextView
        android:id="@+id/textViewHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height (cm):"
        android:layout_below="@+id/textViewAge"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/editTextHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textViewHeight"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/editTextAge"
        android:hint="Enter height"
        android:inputType="numberDecimal"
        android:background="@drawable/edittextdrawable"
        />

    <!-- Weight -->
    <TextView
        android:id="@+id/textViewWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight (kg):"
        android:layout_below="@+id/textViewHeight"
        android:layout_marginTop="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="25dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/editTextWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textViewWeight"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/editTextHeight"
        android:hint="Enter weight"
        android:inputType="numberDecimal"
        android:background="@drawable/edittextdrawable"
        />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:text="Save Changes" />


    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/nav_graph"
        android:layout_marginBottom="98dp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav"/>

</RelativeLayout>
